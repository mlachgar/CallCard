            name="Balance"
            restorable="false">
      </view>
   </extension>
   <extension
         id="CallCard.product"
         point="org.eclipse.core.runtime.products">
      <product
            application="CallCard.application"
            name="Call Cards Business">
         <property
               name="appName"
               value="callcard.product">
         </property>
         <property
               name="windowImages"
               value="icons/card_16.png,icons/card_32.png">
         </property>
      </product>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="CallCard.application"
            name="callcard.product">
         <property
               name="appName"
               value="callcard.product">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
