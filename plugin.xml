            id="ma.mla.view.provider.sheet"
            name="Fiche fournisseur"
            restorable="false">
      </view>
      <view
            category="CallCard"
            class="ma.mla.callcards.views.ClientsStatusView"
            icon="icons/client_status_16.png"
            id="ma.mla.view.clients.status"
